<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_background">

    <include layout="@layout/toobar_layout"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/name_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:background="@color/appTextBlue" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:hint="请输入用户名/手机号"
            android:layout_marginRight="40dp"
            android:layout_height="@dimen/x100" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/name_layout"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/password_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:background="@color/appTextBlue" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:hint="密码"
            android:layout_height="@dimen/x100" />

    </LinearLayout>


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:text="登录"
            android:textSize="20sp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/rectangle_shape"
            android:layout_below="@+id/password_layout"
            android:layout_marginTop="@dimen/x30"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:text="注册新用户"
        android:layout_below="@+id/login"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/appTextBlue"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="农业部渔业船舶检验局"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


</RelativeLayout>
